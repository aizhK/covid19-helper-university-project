<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fi.team5.covid19helper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconkonka"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_krv"
        android:supportsRtl="true"
        android:theme="@style/Theme.Team5Covid19Helper">
        <activity
            android:name=".countryClasses.CountryDetailsActivity"
            android:parentActivityName=".CurrentStatusActivity"/>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SymptomsAndPreventionsInfo"
            android:parentActivityName=".WhatWouldYouLikeToView" />
        <activity
            android:name=".WhatWouldYouLikeToView"
            android:parentActivityName=".learnMore.LearnMoreActivity" />
        <activity
            android:name=".AboutUsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".learnMore.RiskGroup"
            android:parentActivityName=".WhatWouldYouLikeToView" />
        <activity
            android:name=".learnMore.Age65AndAbove"
            android:parentActivityName=".WhatWouldYouLikeToView" />
        <activity
            android:name=".learnMore.Age45to64"
            android:parentActivityName=".WhatWouldYouLikeToView" />
        <activity
            android:name=".learnMore.Age18to44"
            android:parentActivityName=".WhatWouldYouLikeToView" />
        <activity
            android:name=".learnMore.Under18"
            android:parentActivityName=".WhatWouldYouLikeToView" />
        <activity
            android:name=".CurrentStatusActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".learnMore.LearnMoreActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>